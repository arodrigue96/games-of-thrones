{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["xo", "prettier"],
  "ignorePatterns": ["jest.config.ts"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "no-unused-vars": "error"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
